<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E3E3"
    android:orientation="vertical"
    tools:context=".mostrar_ambulancias">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_volver_mostrar"
            android:layout_width="50dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/flecha_volver"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textView_mostrar_ambulancias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:text="Lista Ambulancias"
            android:textColor="#E91E63"
            android:textSize="38sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_ambulancias_mostrar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>